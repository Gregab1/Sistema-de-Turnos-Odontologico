<!DOCTYPE html>
<html>

<head>
  <title>Inicio</title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <base target="_top">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <style>
    body {
      background: url("https://images.squarespace-cdn.com/content/v1/5b91733c9772ae9bb38e47c0/1566870915670-9RONE3DY9L3HQNFJY4W8/Clinica+dental.jpg");
      background-size: cover;
      background-repeat: no-repeat;
      margin: 0;
      padding: 0;
      font-family: 'Open Sans', sans-serif;
    }

    .bg-custom {
      background-color: #f5f5f5;
   
    }

    #lista-resultados {
      display: block;
    }



    .modal-content {
      background-color: #F5F5F5;
      margin: 3% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 90%;
    }

    .men {
      color: red;
      display: none;
    }

    .titulo {
      text-align: center;
      color: grey;
    }

    .form-control,
    btn {
      border: none;
      outline: none;
      border-radius: 15px;
      padding: 0.5em;
      background-color: #ccc;
      box-shadow: inset 2px 5px 10px rgba(0, 0, 0, 0.1);
      transition: 300ms ease-in-out;
    }

    .form-control:focus {
      background-color: white;
      transform: scale(1);
      box-shadow: 13px 13px 100px #969696,
        -13px -13px 100px #ffffff;
    }

    .input-container {
      position: relative;
      display: flex;
      margin: 0 auto;
      height: 2.8rem;
      width: 100%;
      max-width: 700px;
      /* Incrementa el ancho máximo del contenedor */
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
      margin-bottom: 20px;
    }

    .input-container input {
      flex-grow: 1;
      border: 1px solid rgb(176, 190, 197);
      border-radius: 8px;
      padding: 0.625rem;
      font-size: 0.875rem;
      color: rgb(69, 90, 100);
      outline: none;
      transition: border-color 0.15s ease-in-out;
    }

    .invite-btn {
      position: absolute;
      width: 150px;
      /* Incrementa el ancho del botón */
      right: 4px;
      top: 4px;
      bottom: 4px;
      border-radius: 4px;
      background-color: blue;
      color: #fff;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      border: none;
      transition: 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .invite-btn:hover {
      right: 2px;
      top: 2px;
      bottom: 2px;
      border-radius: 8px;
    }

    .input-container input:placeholder-shown~.invite-btn {
      pointer-events: none;
      background-color: gray;
      opacity: 0.5;
    }

    .mayuscula {
      text-transform: capitalize;
    }

    .btnD {
      display: inline-block;
      margin: 10px;
    }

    .mensajeria {
      background-color: gray;
      margin-left: 16rem;
      margin-right: 16rem;
      border-radius: 2rem;

    }

    p {
      color: red;
      text-align: center;
      font-size: 2rem;
    }

    .coten {
      background-color:#cbe6f7;
      border-radius: 1rem;
      margin-bottom: 2rem;
       box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); /* Sombra difusa alrededor */
    }

    .vista {
      display: flex;
      gap: 50px;
    }
    .cabeza{
      background-color:#E0ECF8;
    }
    .info{
      margin-top:1rem;
    }
    .paciente-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
        margin-bottom: 30px; /* Agrega separación entre pacientes */
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* Efecto de sombra */
    }

    .paciente-container div {
        padding: 8px;
        font-size: 14px;
    }
  </style>
</head>

<body>

  <div class=" cabeza">
    <div class="btnD">
      <a href="/administrador/solicitud"><button class="btn btn-outline-success" > Solicitudes</button></a>
    </div> 
    <div class="btnD">
      <a href="/administrador/agendado"><button class="btn btn-outline-success">Agendados</button></a>
    </div> 
    <div class="btnD">
      <a href="/administrador/atendido"><button class="btn btn-outline-success">Atendidios</button></a>
    </div> 
    <div class="btnD">
      <a href="/administrador/cancelado"><button class="btn btn-outline-success">Cancelados</button></a>
    </div> 
  </div>



  <div class="container my-5">

    <h1 class="titulo">Listar historial del Paciente</h1>

    <div class="input-container">
      <input type="text" class="busqueda" placeholder="DNI" id='dni' required maxlength="8" required oninput="this.value=this.value.replace(/[^0-9]/g,'');" >
      <button id="btn-mostrar" class="invite-btn"onclick="obtenerDatosObjeto()">Mostrar Resultados</button>
      
    </div>
      <button id="btn-cerrar" class="btn btn-success" style="display: none;" onclick="cerrarLista()">Cerrar</button>

    <div class="info" id="lista-resultados">
     
    </div>
     <p id="no-turnos-message" style="display:none; color:red;">No hay turnos asignados para esa fecha.</p>
   

  </div>

  <div class="mensajeria">
    <p  id="mensajeTemporal"></p>
     <p id="msj" style="display: none;">No se a encontrado resultados</p>
  </div>




  <script>
   
  
   function obtenerDatosObjeto() {
  var _dni = document.getElementById('dni').value;
  const listaHistorial = <%- JSON.stringify(pacientesHH) %>;

  console.log("Lista completa de historial:", listaHistorial);

  // Filtrar los pacientes que coincidan con el DNI ingresado
  const listaHdni = listaHistorial.filter(paciente => paciente.dni === _dni);

  if (listaHdni.length > 0) {
    mostrarResultados(listaHdni);
  } else {
    document.getElementById('lista-resultados').innerHTML = '';
    document.getElementById('msj').style.display = 'block';
    document.getElementById('btn-cerrar').style.display='block';
  }
}


function mostrarResultados(data) {
    console.log("Datos encontrados:", data);
    const resultsList = document.getElementById('lista-resultados');
    resultsList.innerHTML = '';

    data.forEach(paciente => {
        var Nombre = paciente.nombre;
        var Apellido = paciente.apellido;
        var Dni = paciente.dni;
        var Domicilio = paciente.domicilio;
        var Distrito = paciente.distrito;
        var Mail = paciente.correo;
        var Telefono = paciente.telefono;
        var FecNac = new Date(paciente.fNac).toLocaleDateString('es-ES') ;
        var TipoT = paciente.tipoTurnos;
        var EstadoT = paciente.estado;
        var FechaT =paciente.fecha ;
        const fechaM= FechaT.split('-');
        const fehcaTurno=`${fechaM[2]}/${fechaM[1]}/${fechaM[0]}`;
        var HoraT = paciente.hora;
        var Diagnostico = paciente.diagnostico;
        var Medicacion = paciente.medicacion;

        resultsList.innerHTML += `
            <div class="paciente-container">
    <div><strong>Nombre y Apellido:</strong> ${Nombre} ${Apellido}</div>
    <div><strong>DNI:</strong> ${Dni}</div>
    <div><strong>Fecha de Nacimiento:</strong> ${FecNac}</div>
    <div><strong>Fecha y Hora de Turno:</strong> ${fehcaTurno}, ${HoraT}</div>
    <div><strong>Domicilio:</strong> ${Domicilio}</div>
    <div><strong>Distrito:</strong> ${Distrito}</div>
    <div><strong>Correo:</strong> ${Mail}</div>
    <div><strong>Teléfono:</strong> ${Telefono}</div>
    <div><strong>Tipo de Turno:</strong> ${TipoT}</div>
    <div><strong>Estado del Turno:</strong> ${EstadoT}</div>
    <div><strong>Diagnóstico:</strong> ${Diagnostico}</div>
    <div><strong>Medicación:</strong> ${Medicacion}</div>
</div>
        `;
    });

    document.getElementById('btn-cerrar').style.display = 'inline-block';
}

document.getElementById('btn-mostrar').addEventListener('click', () => {
    obtenerDatosObjeto();
});

function cerrarLista() {
    document.getElementById('lista-resultados').style.display = 'none';
    document.getElementById('btn-cerrar').style.display = 'none';
    document.getElementById('msj').style.display = 'none';
}

  </script>
</body>

</html>