<!DOCTYPE html>
<html>

<head>
    <title>Paciente</title>
    <base target="_top" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .but {
            text-align: center;
        }

        img {
            width: 10%;
        }

        body {
            background-image: url('https://images.unsplash.com/photo-1630448925000-f014372affc7?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            /* Altura completa de la ventana */
        }

        .contenedor {
            padding: 20px;
            max-width: 90%;
            background-color: rgba(255, 255, 255, 0.8);
            /* Fondo semi-transparente para el contenedor */
            border-radius: 10px;
            /* Bordes redondeados */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            /* Sombra para el contenedor */
        }

        h1 {
            text-align: center;
            color: #00008B;
            /* Azul oscuro */
        }

        .table {
            margin: 20px auto;
            /* Espaciado superior entre la tabla y el título */
            max-width: 100%;
            padding: 15px;
            border-radius: 10px;
            /* Bordes redondeados */
            overflow: hidden;
            /* Para que los bordes redondeados funcionen */
            border: 1px solid #dee2e6;
            /* Borde sólido para la tabla */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            /* Sombra más pronunciada */
        }

        th,
        td {
            border: 1px solid #dee2e6;
            /* Borde sólido para celdas */
        }

        .btn {
            display: flex;
            justify-content: center;
        }
        .mensaje{
      color:red;
      text-align:center;
    }
    </style>
</head>

<body>
    <div class="contenedor">
        <h1>Datos del Paciente</h1>
        <table class="table">
            <thead>
                <tr class="table-light">
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Tipo de Turno</th>
                    <th>Estado Turno</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <% if (pacientes.length> 0) { %>
                    <% pacientes.forEach(paciente=> { %>
                        <tr>
                            <td>
                                <%= paciente.nombre %>
                            </td>
                            <td>
                                <%= paciente.apellido %>
                            </td>
                            <td>
                                <%= paciente.dni %>
                            </td>
                            <td>
                                <%= paciente.tipoTurnos %>
                            </td>
                            <td>
                                <%= paciente.estado %>
                            </td>
                            <td>
                                <%= paciente.fecha %>
                            </td>
                            <td>
                                <%= paciente.hora %>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td class="mensaje" colspan="7">No hay pacientes registrados</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>





        <div class="btn" >
            <a href="/"><button class="btn btn-primary" onclick="volver()"><span class="arrow">&#8592;</span>
                    Salir</button></a>
        </div>
      
</body>

</html>